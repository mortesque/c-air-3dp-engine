include <BOSL2/std.scad>
include <BOSL2/gears.scad>
include <BOSL2/ball_bearings.scad>
module crank(wdth,stk,od,crp,a,ts,nt){
$fn=64;
 difference(){
  difference(){
   linear_extrude(wdth){ 
      hull(){
       circle(od/2);
       translate([stk,0,0])
       circle(od/2);
      }

   }
   translate([0,0,wdth/2])
   spur_gear(circ_pitch=ts, teeth=nt, thickness=wdth, pressure_angle=a);
  }
  translate([stk,0,wdth/2])
  spur_gear(circ_pitch=ts, teeth=nt, thickness=wdth, pressure_angle=a);
 }
}
